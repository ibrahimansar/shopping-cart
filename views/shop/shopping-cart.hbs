{{# if products}}

<div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
          {{# each products}}
              <li class="list-group-item">
              <span class="badge badge-info float-right">{{ this.qty }}</span>
                <strong>{{ this.item.title }}</strong>
                <span class="label label-success">{{ this.price }}</span>
                <div class="btn-group">
                  <!-- <button class="btn btn-primary btn-xs dropdown-toggle" type="button">Action</button> -->

                  <button class="btn btn-primary btn-xs dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Action
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <li class="dropdown-item"><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                    <li role="separator" class="divider"></li>
                    <li class="dropdown-item"><a href="#">Remove All</a></li>
                  </ul>

                </div>
              </li>
          {{/ each }}
        </ul>
          </div>
        </div>

        <div class="row">
              <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                          <strong>Total: {{ totalPrice }}</strong>
              </div>
            </div>
            <hr>
            <div class="row">
                  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                      <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
                  </div>
                </div>


{{ else}}

<div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                  <h2>No items in cart</h2>
      </div>
    </div>

{{/ if}}
